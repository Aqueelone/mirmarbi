!!!
%html
  %head
    = ' '
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}
    %link{rel: "dns-prefetch", href: "http://cdn.mirmarbi.com"}
    %link{rel: "dns-prefetch", href: "http://www.google-analytics.com"}
    %meta{name: "fb:app_id", content: "469203883283146"}
    %meta{property: "fb:app_id", content: "469203883283146"}
    = yield :custom_meta_tags
    = yield :opengraph_meta_tags
    %meta{content: "Sergy Nazarevich", name: "author"}
    %link{rel: "author", href: "https://www.facebook.com/aqueelone"}
    %title= content_for?(:title) ? "#{t(:title)} | " + yield(:title) : "#{t(:title)}"

    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      = javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  = ' '
  %body
    %input{type: 'hidden', id: 'locale', value: "#{I18n.locale}"}
    %input{type: 'hidden', id: 'catalog-test', value: "#{session['category']}"}
    .fb-root
    .mod-loader
      .div-loader
        %img.loader{src: '/ajax-loading.gif', alt: 'loading..', title: 'loading...'}
    %header#home
      %nav.navbar.navbar-transparent.navbar-fixed-top
        .main-nav
          .container
            .madein
              %img.madein{src: '/madein.png', alt: 'made in Turkey', title: 'made in Turkey'}
            .navbar-header
              .button{type: 'button', class: 'navbar-toggle', data: {:toggle => 'collapse',  :target => '.navbar-collapse'}}
                %span.sr-only
                  Toggle navigation
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              %a.navbar-brand{href: '/'}
                %img{src: '/logo.png', alt: 'logo', title: "#{t('home-slider.t1')} #{t('home-slider.t2')} #{t('title')}"}
            = render partial: 'selltype'
            = render partial: 'lang'
            .collapse.navbar-collapse
              = render partial: 'menu'
    .container
      = render partial: 'messages'
      = yield
    %footer.footer
      = render partial: 'footer'