#sign_up_modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"}
          %i.fa.fa-times-circle
        %h4#SignInModal.modal-title Create an account
        %p Add your details to create an account
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name, :format => :js), :remote => true,  :html => {:class => "form-signin"}) do |f|
        .modal-body
          .avatar
            %img{src: '../no-gravatar.jpg'}
          = f.input :name, :autofocus => true, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Your name..."
          = f.input :email, :autofocus => true, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Your email..."
          = f.input :password, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "New password..."
          = f.input :password_confirmation, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "New password comfirmation..."
        .modal-footer
          .form-actions
            .modal-social-icons
              %a{ href: '/users/auth/vkontakte', class: "btn btn-default vkontakte"}
                %i.fa.fa-vk.modal-icons
              %a{ href: '/users/auth/facebook', class: "btn btn-default facebook"}
                %i.fa.fa-facebook.modal-icons
            = f.button :submit, "Sign Up", :class => "loginbutton animated"
