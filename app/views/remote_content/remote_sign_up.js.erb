if($('#sign_up_modal').length == 0) {
  $("body").prepend("<%= escape_javascript(render "remote_sign_up", :formats => [:html]) %>");
}

$("#sign_up_modal").modal();

//Gravatar
$('#sign_up_modal input.email').change( function() {
  email = $(this).val();
  if(isValidEmailAddress(email)){
    avatar = Gravtastic(email, { size: 300});
    $('.avatar img').attr('src', avatar);
  }
});